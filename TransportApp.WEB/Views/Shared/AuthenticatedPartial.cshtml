
@using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-form navbar-right" }))
 {
        @Html.AntiForgeryToken()
        <form class="navbar-form navbar-right">
            <button type="submit" class="btn btn-default">
                <span class="glyphicon glyphicon-share-alt"></span>
                 @Resources.Resource.SignOutBtn
            </button>
        </form>
        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a id="drop2" href="#" class="dropdown-toggle" data-toggle="dropdown">
                    @Resources.Resource.Language
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li>@Html.ActionLink("Русский", "ChangeCulture", "Home", new { lang = "ru" }, null)</li>
                    <li>@Html.ActionLink("English", "ChangeCulture", "Home", new { lang = "en" }, null)</li>
                </ul>
            </li>
            <li>@Html.ActionLink(User.Identity.Name, "UserAccount", "UserArea")</li>
        </ul>
 }
