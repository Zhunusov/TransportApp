@using TransportApp.WEB.Models
@model UserRegDataViewModel
@{ 
    Layout = null;
}
@using (Html.BeginForm("RegistrationData","UserArea",FormMethod.Post))
{
<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
        <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
        <script src='@Url.Content("~/Scripts/jquery-ui-1.12.1.min.js")' type="text/javascript"></script>
        <script type="text/javascript">
                $(function () {
                    $("[data-autocomplete-source]").each(function () {
                        var target = $(this);
                        target.autocomplete({ source: target.attr("data-autocomplete-source") });
                    });
                });
        </script>
    </head>
    <body>
        
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <br />
            <div class="form-group">
                @Html.LabelFor(m => m.BizName, new { @class = "col-md-5 control-label" })
                @Html.TextBoxFor(m => m.BizName, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(m => m.BizName, "", new { @class = "text-danger"})*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BizUniqueNumber, new { @class = "col-md-5 control-label" })
                @Html.TextBoxFor(m => m.BizUniqueNumber, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(m => m.BizUniqueNumber, "", new { @class = "text-danger" })*@
            </div>

            <input type="text" name="name" data-autocomplete-source='@Url.Action("AutocompleteSearch")' />
            
            <div class="form-group">
                @Html.LabelFor(m => m.CityName, new { @class = "col-md-5 control-label" })
                @*@Html.TextBoxFor(m => m.CityName, new { @class = "form-control" })*@
                @*@Html.ValidationMessageFor(m => m.CityName, "", new { @class = "text-danger" })*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Address, new { @class = "col-md-5 control-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control" })
                @*@Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BizStatus, new { @class = "col-md-5 control-label" })
                @Html.DropDownListFor(m => m.BizStatus,
            new SelectList(new List<string>() { "Активен", "Неактивен" }),
            new { @class = "form-control" })
                @*@Html.ValidationMessageFor(m => m.BizStatus, "", new { @class = "text-danger" })*@
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.BizDescription, new { @class = "col-md-5 control-label" })
                @Html.TextAreaFor(m => m.BizDescription, new { @class = "form-control", @rows = "5" })
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-4 pull-right">
                    <input type="submit" value="@Resources.Resource.BtnSave" class="btn btn-default" />
                </div>
            </div>
    </body>
</html>
}


